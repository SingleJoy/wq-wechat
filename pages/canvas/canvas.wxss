.canvasBox{
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.firstCanvas{
    position: relative;
    z-index: 9;
    box-sizing: border-box;
}
.sign-tips{
    margin: 0;
    height:120rpx;
    position: absolute;
    transform: rotate(90deg);
    bottom:50%;
    right:0;
}
.sign-tips text{
    padding-right: 14px;
    font-size: 32rpx;
    color: #999;
}
.sign-operation{
    position: absolute;
    z-index: 9999;
    bottom:0;
    right: 0;
    height: auto;
   background:#f5f5f5;
}
.btn-style{
    border-radius:5px;
    padding: 6px 10px;
    font-size:20rpx;
    text-align: center;
    line-height: 40rpx;
    position: absolute;
    transform: rotate(90deg);
}
.clear-sign{
    left:10px;
    bottom: 170rpx;
    border: 1px solid #1e91f9;
    color: #1e91f9;
}
.sign-submit{
    left:10px;
    bottom:60rpx;
    background-color: #1e91f9;
    color: #fff;
}