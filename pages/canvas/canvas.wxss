.canvasBox{
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.firstCanvas{
    position: relative;
    z-index: 9;
    box-sizing: border-box;
}
.sign-tips{
    width: 100%;
    transform:rotate(90deg);
    position: absolute;
    top:50%;
    bottom: 50%;
    right: 0;
    text-align: center;
}
.sign-tips text{
    font-size: 24px;
    color: #999;
}
.sign-operation{
    position: fixed;
    z-index: 9999;
    bottom:20rpx;
    left: 20rpx;
    height: auto;
}
.btn-style{
    width: 120rpx;
    height:120rpx;
    border-radius: 50%;
    font-size:24rpx;
    text-align: center;
    line-height: 120rpx;
    background-color: #1e91f9;
    color: #fff;
    transform:rotate(90deg);

}
.clear-sign{
    left: 20rpx;
    bottom: 30rpx;
}
.sign-submit{
    left:160rpx;
    bottom: -90rpx;
}