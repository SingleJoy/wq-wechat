.canvasBox{
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.firstCanvas{
    position: relative;
    z-index: 9;
    box-sizing: border-box;
}
.sign-tips{
    margin: 0;
    height:45px;
    position: absolute;
    transform: rotate(90deg);
    bottom:50%;
    right:-9px;
    z-index: 9999;
}
.sign-tips text{
    padding-right: 14px;
    font-size: 32rpx;
    color: #999;
}
.sign-operation{
    position: absolute;
    z-index: 99;
    bottom:0;
    right: 0;
    height: auto;
    border:1px dotted #f5f5f5;
}
.btn-style{
    border-radius:5px;
    text-align: center;
     width: 65px;
    height: 25px;
    font-size:10px;
    line-height: 25px;
    position: absolute;
    transform: rotate(90deg);
    background-color: transparent;
}
.clear-sign{
    left:-9px;
    bottom: 270rpx;
    border: 1px solid #1e91f9;
    color: #1e91f9;
}
.sign-submit{
    left:-9px;
    bottom:100rpx;
    background-color: #1e91f9;
    color: #fff;
}