/* pages/login/login.wxss */
.form-box{
  width:100%;
  height:auto;
  overflow:hidden;
  padding:0 40rpx;
  margin-top:96rpx;
  background:#fff;

}
.title{
  text-align: center;
  margin-bottom: 40rpx;
  color:#fff;
}
.login-logo{
  width: 260rpx;
  height:212rpx;
  margin-top: 54rpx;
}

.form-item{
  display: flex;
  margin-bottom:30rpx;
  /* position: relative; */
  /* flex-direction: column;
  justify-content: space-between */
 
}
.form-item .section{
    width:100%;
    position:relative;
    background:#fff;
    height:80rpx;
    border-bottom:1px solid #d9d9d9;
    margin-left:64rpx;
    /* float:left; */
}
.login-icon{
    width:35rpx;
    height:50rpx;
    display: block;
    position: absolute;
    margin-top:16px;
    /* bottom: 0; */
    /* float: left; */
}
.form-item .errMsg{
    position: absolute;
    left:10rpx;
    color:#fe3627;
    bottom:-40rpx;
    font-size: 24rpx;
    z-index: 2
}
.form-item .clear {
  position:absolute;
  top:26rpx;
  right:18rpx;
  z-index:2;
  display:block;
  background:#fff;
  height:44rpx;
  width:44rpx;
}
.username,.password{
  position:absolute;
  top:26rpx;
  left:10rpx;
  display:block;
  width:100%;
  height:44rpx;
  background:#fff;
  color:#333;
  font-size:30rpx;

}
.btn-area{
    width:80%;
    margin:0 auto;
    margin-top:210rpx;

}
.btn-area button{
    background: #4091fb;
    color:#fff;
    height:80rpx;
    line-height: 80rpx;
}
.QR-code{
    text-align: center;
    margin-top:120rpx;
    display: block;
}
.QRimg{
    width:112rpx;
    height:112rpx;
    margin: 0 auto;
    display: block;
}

