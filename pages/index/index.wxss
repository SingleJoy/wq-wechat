.main {
  margin: 36rpx 32rpx;
}
.contract {
  height: 235rpx;
  background: deepskyblue;
  border-radius: 15rpx;
  padding-top: 20rpx; 
  background: linear-gradient(to right, #62d6fc, #5f50fb);
}
.sponsor-contract {
  margin-left: 32rpx;
  font-size: 32rpx;
  color: #fff;
  margin: 20rpx 32rpx;
}
.contract-img {
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-top: 15rpx;
} 
.contract-img image {
  width: 100%;
  height: 100%;
}
.contact-state {
  margin-top: 24rpx;
}
.contact-list {
  height: 88rpx;
  box-shadow: 1px 2px 5px #ccc;
  margin-top: 24rpx;
  padding: 36rpx;
  border-radius: 15rpx;
}
.contact-list image {
  width: 88rpx;
  height: 88rpx;
}
.content {
  display: inline-block;
  margin-left: 36rpx;
  vertical-align: top;
}
.content-title {
  font-size: 32rpx;
  color: #333333;
}
.content-num {
  /* margin-top: 32rpx; */
  font-size: 28rpx;
  color: #6072FB;
  font-weight: 700;
  margin-top: 15rpx;
}
.sign-num01 {
  color: #FF8400;
}
.sign-num02 {
  color: #F44747;
}
.sign-num03 {
  color: #007EFF;
}