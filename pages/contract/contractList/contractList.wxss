@import "../../../weui/contract.wxss";
.page-content{
    position: fixed;
    width: 100%;
    height: auto;
    box-sizing: border-box;
    overflow: hidden;
    top: 0;
    z-index: 99;
    background-color:#fff;
}

.header-tabs{
    position: relative;
    display: flex;
}
.main-content{
    position: absolute;
    height: 100%;
    width: 100%;
}
#swiper-tab-container{
    position: fixed;
    width: 100%;
    border-bottom: 1px solid #ddd;
    top: 80rpx;
    z-index: 99;
}
.swiper-tab{
    position: relative;
    z-index: 99;
}
.swiper-tab view {
    overflow: hidden;
    font-size: 28rpx;
    display: inline-block;
    width: 33%;
    color: #666;
    border-bottom: 0rpx;
    position: relative;
    text-align: center;
    height:68rpx;
    line-height: 80rpx;
}
.swiper-tab view i{
    position: absolute;
    top: 30rpx;
    right: 10rpx;
    width: 0;
    height: 0;
    border: 12rpx solid #999;
    border-top-color: #999;
    border-bottom-color: transparent;
    border-left-color: transparent;
    border-right-color: transparent;

}
.swiper-tab view.on{
    color: #4091fb;
}
.swiper-tab view.on i{
    top: 20rpx;
    border: 12rpx solid #4091fb;
    border-bottom-color: #4091fb;
    border-top-color: transparent;
    border-left-color: transparent;
    border-right-color: transparent;
}
.model{
    width: 100%;
    height:100%;
    position: fixed;
    background-color: rgba(0,0,0,0.7);
    z-index: 9;
    top:80px;
}
.swiper{
    position: fixed;
    width: 100%;
    height: auto;
    max-height: 420rpx;
    overflow-y: scroll;
    top:160rpx;
    left: 0;
    z-index: 9999;
    background-color: #fff;
}
.swiper-item {
    width: 100%;
    font-size:28rpx;
    overflow-y: auto;
    overflow-x: hidden;
}
.swiper-item view view{
    width: 100%;
    display: block;
    font-size: 28rpx;
    height: 70rpx;
    line-height:70rpx;
    border-bottom: 1rpx solid #ddd;
    color: #666;
    padding-left: 60rpx;
}

.show {
    display: block;
    text-align: left;
}

.hidden {
    text-align: left;
    display: none;
}
.list-item-on {
    border-bottom: 1rpx solid #4091fb;
    color: #4091fb;
}
.tab-list{
    z-index: 1;
    width: 100%;
    margin-top: 160rpx;
    background-color: #fff;
    margin-bottom:10rpx;
}

.tab-list .tab-item{
    margin:0 40rpx;
    box-shadow:1px 2px 5px #ccc;
    border-radius: 5px;
    height: 80rpx;
}
.tab-list .tab-item view{
     display: inline-block;
     width: 25%;
     height: 40rpx;
    text-align: center;
    font-size: 28rpx;
    box-sizing: border-box;
    overflow: hidden;
    margin-top: 20rpx;
 }
.tab-list .tab-item view.border-right{
    border-right: 1px solid #ddd;
}
.tab-list .tab-item view.on{
    color: #4091fb;
}