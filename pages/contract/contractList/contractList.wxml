
<view class="container common-box" style="height: 100%;overflow: hidden;box-sizing: border-box" bindscroll="onPageScroll">
    <view class="main-content" style="height: auto;">
        <view class="page-content" >
            <view class="search" >
                <view class="df search-arr">
                    <icon class="searchcion" size='20' type='search' ></icon>
                    <input  auto-focus="{{false}}" placeholder="搜索"  value="" bindtap="goSearch" disabled/>
                </view>
            </view>
            <view class="tab-list">
                <view class="tab-item">
                    <view class="item  border-right {{contractStatus=='3'? ' on':''}}" data-current="3" bindtap="tabNavContract">已生效</view>
                    <view class="item  border-right{{contractStatus=='2'? ' on':''}}" data-current="2" bindtap="tabNavContract">待他人签署</view>
                    <view class="item  border-right{{contractStatus=='1'? ' on':''}}" data-current="1" bindtap="tabNavContract">待我签署</view>
                    <view class="item {{contractStatus=='4'? ' on':''}}" data-current="4" bindtap="tabNavContract">已截止</view>
                </view>

            </view>
        </view>
        <!-- 下拉菜单   -->
        <view id="swiper-tab-container">
            <view class="swiper-tab">
                <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1"   bindtap="tabFolder">{{folderName}}
                    <i></i>
                </view>
                <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2"  bindtap="tabContractType">{{contractTypeName}}
                    <i></i>
                </view>
                <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3"  bindtap="tabAccountNo">{{accountTypeName}}
                    <i></i>
                </view>
            </view>

        </view>


        <view class="model" wx:if="{{selected!=0}}" bindtap="closeModel" style="height:{{height}}px;"></view>
        <view wx:if="{{selected!=0}}"  class="swiper" >

            <view class="swiper-item">

                <view class="{{selected==1?'show':'hidden'}}">
                    <view wx:for="{{folderList}}" wx:key="index">
                        <view class="{{sum == 1?'list-item-on':'list-item'}}"  bindtap="chooseFolder" data-filingNo="{{item.filingNo}}" data-filingName="{{item.filingName}}" >{{item.filingName}}</view>
                    </view>

                </view>

                <view class="{{selected==2?'show':'hidden'}}">
                    <view class="{{sum == 1?'list-item-on':'list-item'}}" data-num="1" bindtap="chooseContractType" data-name="对个人合同">对个人合同</view>
                    <view class="{{sum == 2?'list-item-on':'list-item'}}" data-num="2" bindtap="chooseContractType" data-name="对企业合同">对企业合同</view>
                </view>

                <view class="{{selected==3?'show':'hidden'}}">
                    <view wx:for="{{accountList}}" wx:key="index" >
                        <view class="{{sum == 1?'list-item-on':'list-item'}}" data-accountCode="{{item.accountCode}}" bindtap="accountType" data-accountName="{{item.accountName}}">
                            {{item.accountName}}
                        </view>

                    </view>

                </view>

            </view>

        </view>

        <scroll-view
                scroll-y
                style="height:{{height}}px;position: absolute;top:270rpx;"
                bindscrolltoupper="upper"
                bindscrolltolower="lower">

            <view class="search-data" style="">
                <view class="data-lists" wx:for="{{contractDataList}}" wx:key="index" wx:if="{{contractDataList.length>0}}" data-contractNo="{{item.contractNo}}" data-contractStatus="{{item.contractStatus}}" bindtap="goDetail">

                    <view class="contract-name">{{item.contractName}}</view>
                    <view class="sign-user">{{item.signers}}</view>
                    <view class="time">提交时间: {{item.createTime}}</view>

                </view>

                <view  wx:if="{{contractDataList.length==0}}">@
                    <text class="no-data">暂无数据</text>
                </view>
            </view>
        </scroll-view>


    </view>


</view>

