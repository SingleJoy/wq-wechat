/* pages/contract/contractDetail/b2bContractDetail.wxss */
.title-option{
    width:100%;
    position:fixed;
    top:0rpx;
    font-size:24rpx;
    text-align: center;
    line-height: 60rpx;
    height:60rpx;
    box-shadow: 0px 1px 4px 2px  #ddd;
    z-index:9;
    background: #fff;
}
.contract-info-box{
    padding:36rpx 32rpx;
    background: #fff;
    box-shadow: 0px 1px 4px 2px  #ddd;
    position: fixed;
    left:0;
    right:0;
    top:60rpx;
    width:100%;
    box-sizing: border-box;
    z-index: 1002;
}
.select-angle{
    width:16rpx;
    height: 16rpx;
    border:1rpx solid #666;
    transition:transform 0.2s;
    transform-origin:8rpx 14rpx;
    transform: rotate(45deg);
    border-left:none;
    border-top:none;
    position: absolute;
    right: 276rpx;
    top:16rpx;
}
.angle-transform{
    transition:transform 0.2s;
    transform: rotate(225deg);
    transform-origin:8rpx 14rpx;
}
.info-item{
    margin-bottom:24rpx;
}
.signer-list{
    margin-top:24rpx;
}
.signer-item{
    margin-bottom:10rpx;
    display: flex;
}
.signer-name,.signer-phone{
    font-size:26rpx;
    line-height: 60rpx;
}
.signer-phone{
    margin-right:10rpx;
}
.info-name{
    font-size:26rpx;
    color:#666;
}
.info-value{
    font-size:26rpx;
    color:#333;
}
.color-them{
    color:#4091FB;
}
.contract-img{
    padding-bottom:104rpx;
