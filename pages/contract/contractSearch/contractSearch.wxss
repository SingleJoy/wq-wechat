@import "../../../weui/contract.wxss";
.page-content{
    background-color:#4091fb;
    height: 72rpx;
    box-sizing: border-box;
    overflow: hidden;
    position: fixed;
    z-index: 99;
    width:100%;
}

.operate {
    position: absolute;
    right: 20rpx;
    top: 60rpx;
}
.operate button{
    display: block;
    height:48rpx;
    font-size: 24rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 30px;
    background: transparent;
    color: #fff;
    padding: 0 20rpx;
}
.operate button.waitMe{
    background: #75AFF8;

 }
.operate button.waitOther{
    background: #98D98E;
}
.operate button.effective {
  background: #F8B862;
}
.operate button.close {
    background:#EC6071;
}
