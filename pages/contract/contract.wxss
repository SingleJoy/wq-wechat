.header-tabs{
    position: relative;
    display: flex;
}
.main-content{
    position: absolute;
}
.swiper-tab-container{
  position: fixed;
}
.swiper-tab{
     position: relative;
    box-sizing: border-box;
    overflow: hidden;
    padding-top:34rpx;
}
.swiper-tab view {
    overflow: hidden;
    font-size: 30rpx;
    display: inline-block;
    width: 33%;
    color: #666;
    border-bottom: 0rpx;
    position: relative;
    text-align: center;
    height: 60rpx;
}
.swiper-tab view i{
    position: absolute;
    top: 16rpx;
    right: 10rpx;
    width: 0;
    height: 0;
    border: 12rpx solid #000;
    border-top-color: #000;
    border-bottom-color: transparent;
    border-left-color: transparent;
    border-right-color: transparent;

}
.swiper-tab view.on{

}
.model{
    width: 100%;
    height:100%;
    position: fixed;
    background-color: rgba(0,0,0,0.3);
    z-index: 1;
}
.swiper-item{
    width: 100%;
    height: auto;
    max-height: 420rpx;
    overflow-y: scroll;
    top: 104rpx;
    left: 0;
    z-index: 9999;
    background-color: #fff;
}
#rights {
    width: 100%;
    font-size:28rpx;
    overflow-y: auto;
    overflow-x: hidden;
}

.show {
    display: block;
    text-align: left;
}

.hidden {
    text-align: left;
    display: none;
}

.list-item {
    width: 100%;
    display: block;
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1rpx solid #ddd;
    color: #000;
    padding-left: 40rpx;
}

.list-item-on {
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1rpx solid #4091fb;
    color: #4091fb;
    padding-left: 40rpx;
}