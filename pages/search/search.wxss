.search{
    width: 90%;
    margin: 20rpx auto;
    background-color:#f7f7f7;
}
.search_arr {
    border: 1px solid #d0d0d0;
    border-radius: 10rpx;
}
.search_arr input{
    margin-left: 60rpx;
    height: 60rpx;
    border-radius: 5px;
}
.search_arr .clear {
    display: block;
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    right: 10rpx;
    top:56rpx;
    /*background: url("../../images/clear.png");*/
}
.search_arr .clear image {
    display: block;
    width: 60rpx;
    height: 60rpx;
}
.searchcion {
    margin: 10rpx 10rpx 10rpx 10rpx;
    position: absolute;
    left:5%;
    z-index: 2;
    width: 20px;
    height: 20px;
    text-align: center;
}


