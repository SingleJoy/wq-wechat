/* pages/start/start.wxss */
.container {
  height:100vh;  
}
.swiper-container{
  width: 100vw;
  height:100vh;  
}
.swiper_box {
  width: 100vw;
  height:100vh;
}

.swiper-item image {
  width:100%;
  height:100vh;
  display: inline-block;
  overflow: hidden;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 50rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}
.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #000;
  color: #fff;
}
 
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 1001;
  background: #FAFAFA;
  border-radius: 3px;
  transform: translate(-50%, -50%);
}
 
