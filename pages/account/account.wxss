 .contract-num-list{
     display: flex;
     flex-direction: row;
     margin-top: 58rpx;
     text-align: center;
}

.contract-num-list .contract-left,.contract-num-list .contract-right{
  /* width: 50%; */
  padding: 24rpx 0;
  text-align: center;
  background-color: #f5f5f5;
  width: 296rpx;
  height: 138rpx;
  border-radius: 5rpx;
  margin: 30rpx auto;
}
.contract-num-list image,.contract-num-list image{
    width: 48rpx;
    height: 48rpx;
    display: block;
    margin: 0 auto;
}

.contract-num-list .contract-left text,.contract-num-list .contract-right text{
    display: block;
    font-size: 24rpx;
    color: #666;
    margin: 20px auto 0;
}
.digital-info-list view{
    padding: 16rpx 0 16rpx 32rpx;
}
.digital-info-list view text{
    color: #666;
    font-size: 28rpx;
}

.digital-info-list view .left-side{
   margin-right: 10rpx;
}
.digital-info-list view .right-side{
   color: #333;
}
.signature-style image{
    width: 190rpx;
    height: 190rpx;
    display: block;
    margin: 0 auto ;
    padding-bottom: 20rpx;
}
.sign-out{
     margin: 24rpx auto 20rpx auto;
    padding: 20rpx 0;
    background-color: #fff;
 }
.sign-out button{

    display: block;
    margin: 0 auto;
    width: 552rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 5px;
    background-color: #4d90f8;
    color: #fff;
}