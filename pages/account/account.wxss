.account{
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.title{
    font-size: 18px;
    font-weight:bold;
    padding: 20rpx 0 0 32rpx;
}

.account-info{
    position: relative;
   margin-top: 20rpx;
   background-color: #fff;
}

.account-info .info-list{
    margin:0 20rpx 0 20rpx;
    box-sizing: border-box;
    box-shadow:1px 2px 5px 1px #ddd;
    border-radius: 5px;
}

.account-info .info-list image.real-name{
    position: absolute;
    width: 128rpx;
    height: 100rpx;
    right:80rpx;
    top:170rpx;
}

.account-info .info-list .list-item view{
    padding: 16rpx 0 16rpx 32rpx;
}

.account-info .info-list .list-item view text{
    font-size: 28rpx;
}

.contract-num ,.digital-certificate,.signature-style{
    margin-top:24rpx;
    background-color: #fff;
 }

.contract-num .contract-info,.digital-certificate .digital-info,.signature-style .signature-image{
    margin:0 20rpx 0 20rpx;
    box-sizing: border-box;
    box-shadow:1px 2px 5px 1px #ddd;
    border-radius: 5px;
}

