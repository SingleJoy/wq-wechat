/**app.wxss**/
@import 'weui/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.common-box{
  background: #f5f5f5;
  box-sizing: border-box;
}
.main-content{
  width:100%;
  background: #fff;
}
.gray-line{
    width:100%;
    height:20rpx;
    background:#f7f7f7;
    position: fixed;
    top:0;
}
.sign-status{
    width: 137rpx;
    line-height: 56rpx;
    font-size: 28rpx;
    color:#fff;
    background: #999999;
    border-radius: 40rpx;
    text-align: center;
    float: right;
}
.signed{
    background: #EC6D71;
}
view,text{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  color: #333;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:32rpx;
  letter-spacing:2px;
}
.nav .back{
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size:32rpx; 
  padding: 10px 15px;
  color:#4091FB
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #f7f7f7;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}

.contract-option{
    width:100%;
}
.option{
    width: 100%;
    height: 104rpx;
    line-height: 104rpx;
    position: fixed;
    bottom: 0;
    background: #4091FB;
    border-radius: 0;
    color: #ffffff;
}
button::after {
    border-radius: 0;
}
button{
    border-radius: 0;
}
image {
  width: 100%;
}
