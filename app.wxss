/**app.wxss**/
@import 'weui/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.common-box{
  background: #f5f5f5;
  box-sizing: border-box;
  padding-top:20rpx;
}
.main-content{
  width:100%;
  background: #fff;
}

view,text{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 32rpx;
  color: #333;
}
.nav{
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:32rpx;
  letter-spacing:2px;
}
.nav .back{
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size:32rpx; 
  padding: 10px 15px;
  color:#4091FB
}
.bg-white{
  background-color: #fff;
}
.bg-gray{
  background-color: #f7f7f7;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}

